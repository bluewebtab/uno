{{ 'section-main-product.css' | asset_url | stylesheet_tag }}



{% comment %}
<div class="swiper-container-product-page swiper-container-{{- product.id -}}">
    <div class="swiper">
    <div class="swiper-wrapper" style="flex-direction: column">
      {% for image in product.images %}
                      <!-- Slideshow container -->
            <div class="slideshow-container">

              <!-- Full-width images with number and caption text -->
              <div class="swiper-slide fade">
                <img class="main-product-img" src="{{ image.src | img_url: 'master' }}" alt="{{ image.alt | escape }}" />
              </div>

              <!-- Next and previous buttons -->
              <a class="prev swiper-button-prev">&#10094;</a>
              <a class="next swiper-button-next">&#10095;</a>
            </div>
            <br>

        
      {% endfor %}
    </div>
    </div>
  </div> 

 {% endcomment %}

 <div class="swiper">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
        {% for image in product.images %}
            <div class="swiper-slide">
                <img class="main-product-img" src="{{ image.src | img_url: 'master' }}" alt="{{ image.alt | escape }}" />
            </div>
        {% endfor %}
    </div>
    <!-- If we need pagination -->
    <div class="swiper-pagination"></div>
  </div>

<script>
   const swiper = new Swiper('.swiper', {
  // Optional parameters
  loop: true,

  // Navigation arrows
  pagination: {
          el: ".swiper-pagination",
          clickable: true,
  }
});
  </script>